<UserControl x:Class="ctlContentItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="195">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="50" MaxWidth="50"/>
            <ColumnDefinition Width="153*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Margin="5" Name="Image1" Stretch="Fill" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Name="TextBlock1" Text="TextBlock" VerticalAlignment="Center" TextWrapping="WrapWithOverflow" />
    </Grid>
</UserControl>
